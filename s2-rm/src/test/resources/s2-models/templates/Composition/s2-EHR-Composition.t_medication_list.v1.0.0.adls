-------------------------------------------------------------------------------------
template_overlay
	s2-EHR-Section.t_medication_history_heading-1.v1.0.0

specialize
	s2-EHR-Section.medication_history_heading.v1

definition
	Section[id1.1] matches {
		/items matches {
			use_archetype Order[id2.1, s2-EHR-Order.medication_order.v3] occurrences matches {0..1}
			allow_archetype Order[id2] closed
			Section[id3] matches {
				items matches {
					use_archetype Action[id4.1, s2-EHR-Action.medication.v1]
					allow_archetype Action[id4] closed
				}
			}
		}
	}

terminology
	term_definitions = <
		["en"] = <
			["id1.1"] = <
				text = <"Basic headings structure for medication list">
				description = <"Basic headings structure for medication list">
			>
			["id2.1"] = <
				text = <"Medication order">
				description = <"Medication order">
			>
			["id4.1"] = <
				text = <"Medication action">
				description = <"Medication action">
			>
		>
	>
