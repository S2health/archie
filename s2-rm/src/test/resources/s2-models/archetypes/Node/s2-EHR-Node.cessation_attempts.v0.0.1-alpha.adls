definition
	Node[id1] matches {	-- Cessation attempts
		items matches {
			Node[id2] occurrences matches {0..1} matches {	-- Location
				value matches {
					Text[id16] 
				}
			}
			Node[id4] occurrences matches {0..1} matches {	-- Date of attempt
				value matches {
					Date_time_value[id17] 
				}
			}
			Node[id5] occurrences matches {0..1} matches {	-- Description
				value matches {
					Text[id18] 
				}
			}
			Node[id6] matches {	-- Therapeutic intervention
				items matches {
					Node[id7] occurrences matches {0..1} matches {	-- Agent
						value matches {
							Text[id19] 
						}
					}
					Node[id9] occurrences matches {0..1} matches {	-- Used optimally
						value matches {
							Boolean_value[id20] matches {
								value matches {True, False}
							}
						}
					}
					Node[id10] occurrences matches {0..1} matches {	-- Comment
						value matches {
							Text[id21] 
						}
					}
				}
			}
			Node[id11] occurrences matches {0..1} matches {	-- Outcome
				value matches {
					Coded_text[id22] matches {
						term matches {
							Terminology_term[id24] matches {
								concept matches {[ac1]}		-- Outcome (synthesised)
							}
						}
					}
				}
			}
			Node[id15] occurrences matches {0..1} matches {	-- Duration of cessation
				value matches {
					Duration_value[id23] matches {
						magnitude matches {|>=PT0S|}
					}
				}
			}
		}
	}

