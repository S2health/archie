definition
	Info_node[id1] matches {	-- Structured name of a person
		items matches {
			Info_node[id2] matches {	-- Title
				value matches {
					Text[id8] 
				}
			}
			Info_node[id3] matches {	-- Given name
				value matches {
					Text[id9] 
				}
			}
			Info_node[id6] matches {	-- Family name
				value matches {
					Text[id10] 
				}
			}
