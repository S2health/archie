										}
									}
								}
							}
						}
					}
					Measured<Quantity>[id26] matches {
						value matches {
							Quantity[id22] matches {	-- Head circumference ([in_i])
								magnitude matches {|0.0..40.0|}
								units matches {
									Coded_text[id24] matches {
										term matches {
											Terminology_term[id23] matches {
												concept matches {[at3]}
											}
										}
									}
								}
							}
						}
					}
				}
			}
			Node[id8] occurrences matches {0..1} matches {	-- Comment
				value matches {
