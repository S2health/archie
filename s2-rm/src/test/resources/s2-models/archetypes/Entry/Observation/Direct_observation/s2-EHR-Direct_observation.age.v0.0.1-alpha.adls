definition
	Direct_observation[id1] matches {	-- Age
		data matches {
			Node[id5] occurrences matches {0..1} matches {	-- Chronological age
				value matches {
					Duration_value[id11] matches {
						magnitude matches {|PT0S..P200Y|}
					}
				}
			}
			Node[id6] occurrences matches {0..1} matches {	-- Adjusted age
				value matches {
					Duration_value[id12] 
				}
			}
			Node[id8] occurrences matches {0..1} matches {	-- Age category
				value matches {
					Text[id13] 
				}
			}
			Node[id7] occurrences matches {0..1} matches {	-- Comment
				value matches {
					Text[id14] 
				}
			}
		}
		qualifiers matches {
			allow_archetype Node[id10] matches {	-- Extension
				include
					archetype_id/value matches {/.*/}
			}
		}
	}

