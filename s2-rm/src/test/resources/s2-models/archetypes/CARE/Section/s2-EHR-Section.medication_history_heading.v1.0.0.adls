definition
	Section[id1] matches {	-- Medication history
		items matches {
			use_archetype Order[id2, s2-EHR-Order.medication_order.v4] 
			Section[id3] occurrences matches {1} matches {	-- Action history
				items matches {
					use_archetype Action[id4, s2-EHR-Action.medication.v1] 
				}
			}
		}
	}

